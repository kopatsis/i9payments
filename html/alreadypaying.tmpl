<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cancel Membership</title>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.2.3"></script>
</head>
<body>

<div x-data="cancelHandler()" x-init="init()">
    <form id="cancel-form" @submit.prevent="handleSubmit">
        <p>Email: <span x-text="email"></span></p>
        <input type="hidden" name="user" x-model="userId">
        <button type="submit">Manage Membership</button>
    </form>
</div>

<script>
function cancelHandler() {
    return {
        email: '',
        userId: '',

        init() {
            this.email = document.getElementById('user-data').dataset.email;
            this.userId = document.getElementById('user-data').dataset.id;
        },

        async handleSubmit() {
            const form = document.getElementById('cancel-form');
            const formData = new FormData(form);

            const response = await fetch('/cancel_membership', {
                method: 'POST',
                body: formData,
            });

            if (response.ok) {
                const result = await response.json();
                console.log('Membership canceled:', result);
                // Handle success (e.g., show a success message)
            } else {
                console.error('Failed to cancel membership:', response.statusText);
                // Handle error (e.g., show an error message)
            }
        }
    }
}

document.addEventListener('alpine:init', () => {
    Alpine.data('cancelHandler', cancelHandler);
});
</script>

<div id="user-data" data-email="{{.Email}}" data-id="{{.UserID}}" style="display: none;"></div>

</body>
</html>
